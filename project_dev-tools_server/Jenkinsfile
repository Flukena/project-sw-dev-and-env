pipeline {
    agent any

    stages {
        stage('Pull code') {
            steps {
                git branch: 'main', url: 'https://github.com/Flukena/project-sw-dev-and-env.git'
            }
        }
        stage('Download dependency') {
            steps {
                sh 'cd project_dev-tools_server && npm install'
            }
        }
        stage('Unit test') {
            steps {
                sh 'cd project_dev-tools_server && npm run test'
            }
        }
        stage('Test report Unit test') {
            steps {
                 publishHTML([
                    allowMissing: false, 
                    alwaysLinkToLastBuild: false, 
                    keepAll: false, 
                    reportDir: './project_dev-tools_server/test.test.js', 
                    reportFiles: 'unit-test.html', 
                    reportName: 'Unit test report', 
                    reportTitles: ''
                ])
            }
        }
        stage('Coverage test report Unit test') {
            steps {
                echo 'Coverage test report'
            }
        }
        stage('Component test') {
            steps {
                echo 'npm run component test'
            }
        }
        stage('Test report Component test') {
            steps {
                echo 'Test report'
            }
        }
        stage('Coverage test report Component test') {
            steps {
                echo 'Coverage test report'
            }
        }
        stage('E2E test') {
            steps {
                echo 'npm run e2e test'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploy'
            }
        }
    }
}
